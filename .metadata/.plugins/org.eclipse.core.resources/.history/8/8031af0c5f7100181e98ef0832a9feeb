			<column name="id_account" type="Integer" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="login" type="varchar(50)" />
			<column name="status" type="Integer" />
		</createTable>


		<addForeignKeyConstraint
